{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": false,
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "lib": ["ESNext", "DOM"],
        "allowImportingTsExtensions": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["tests/**", "node_modules/**", "dist/**"]
}
